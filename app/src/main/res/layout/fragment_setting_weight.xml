<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix"
    tools:context=".ui.setting.SettingDateFragment"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="180dp"
      android:layout_centerInParent="true"
      >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_set_weight_bg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_centerInParent="true"
          android:layout_marginLeft="@dimen/date_magin"
          android:layout_marginRight="@dimen/date_half_magin"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          >
        <ImageView
            android:id="@+id/btn_weight_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/triangle_top"
            />
        <TextView
            android:id="@+id/txt_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.0"
            android:textColor="#ffffff"
            android:textSize="58.7sp"
            fontPath="fonts/ARIBLK.TTF"
            />
        <ImageView
            android:id="@+id/btn_weight_reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/triangle_bottom"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_centerInParent="true"
          android:layout_marginLeft="@dimen/date_half_magin"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="kg"
            android:textColor="#ffffff"
            android:textSize="58.7sp"
            fontPath="fonts/ARIBLK.TTF"
            />
      </LinearLayout>
    </LinearLayout>


  </RelativeLayout>
  <include layout="@layout/include_setting_lu_lr"/>
</RelativeLayout>