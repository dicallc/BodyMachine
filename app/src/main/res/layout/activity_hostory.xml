<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_contain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical"
    tools:ignore="MissingPrefix"
    >
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="64dp"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:background="@drawable/ic_title_bg"
      android:orientation="horizontal"
      android:paddingRight="10dp"
      >
    <TextView
        android:id="@+id/txt_load_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="HISTORICAL DATA"
        android:textColor="#ffffff"
        android:textSize="44sp"
        android:visibility="visible"
        />

    <LinearLayout
        android:id="@+id/ly_title_person_msg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        >
      <TextView
          android:id="@+id/txt_title_id"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="64dp"
          android:shadowColor="#80000000"
          android:shadowDx="2"
          android:shadowDy="2"
          android:shadowRadius="2"
          android:text="ID"
          android:textColor="#ffffff"
          android:textSize="26.7sp"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="15dp"
          android:shadowColor="#80000000"
          android:shadowDx="2"
          android:shadowDy="2"
          android:shadowRadius="2"
          android:text="身高"
          android:textColor="#ffffff"
          android:textSize="26.7sp"
          />
      <TextView
          android:id="@+id/txt_title_height"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="64dp"
          android:shadowColor="#80000000"
          android:shadowDx="2"
          android:shadowDy="2"
          android:shadowRadius="2"
          android:text="-"
          android:textColor="#ffffff"
          android:textSize="24sp"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="15dp"
          android:shadowColor="#80000000"
          android:shadowDx="2"
          android:shadowDy="2"
          android:shadowRadius="2"
          android:text="年龄"
          android:textColor="#ffffff"
          android:textSize="26.7sp"
          />
      <TextView
          android:id="@+id/txt_title_age"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="64dp"
          android:shadowColor="#80000000"
          android:shadowDx="2"
          android:shadowDy="2"
          android:shadowRadius="2"
          android:text="-"
          android:textColor="#ffffff"
          android:textSize="24sp"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="15dp"
          android:letterSpacing="-0.08"
          android:shadowColor="#80000000"
          android:shadowDx="2"
          android:shadowDy="2"
          android:shadowRadius="2"
          android:text="性别"
          android:textColor="#ffffff"
          android:textSize="26.7sp"
          />
      <TextView
          android:id="@+id/txt_title_sex"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="10dp"
          android:shadowColor="#80000000"
          android:shadowDx="2"
          android:shadowDy="2"
          android:shadowRadius="2"
          android:text="-"
          android:textColor="#ffffff"
          android:textSize="24sp"
          />
    </LinearLayout>
  </FrameLayout>
  <RelativeLayout
      android:id="@+id/fl_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="-65dp"
      android:orientation="vertical"
      android:paddingBottom="65dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@mipmap/ic_bg_history"
        >
      <LinearLayout
          android:id="@+id/ly_center"
          android:layout_width="match_parent"
          android:layout_height="213dp"

          android:gravity="center_vertical"
          android:orientation="horizontal"
          >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="14dp"
              android:paddingRight="14dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="体重"
                android:textColor="#ffffff"
                android:textSize="25sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textColor="#ffffff"
                android:textSize="21.3sp"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="14dp"
              android:paddingRight="14dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="骨骼肌"
                android:textColor="#ffffff"
                android:textSize="25sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textColor="#ffffff"
                android:textSize="21.3sp"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="14dp"
              android:paddingRight="14dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="体脂肪"
                android:textColor="#ffffff"
                android:textSize="25sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textColor="#ffffff"
                android:textSize="21.3sp"
                />
          </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:gravity="center_vertical"
              android:orientation="vertical"
              >
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="27.5"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:gravity="center_vertical"
              android:orientation="vertical"
              >
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chat_gugeji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="27.5"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:gravity="center_vertical"
              android:orientation="vertical"
              >
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chat_tizhifang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="27.5"
                />
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="57dp"
          android:layout_below="@+id/ly_center"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="测试时间"
              android:textColor="#ffffff"
              android:textSize="26.7sp"
              />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
          <android.support.v7.widget.RecyclerView
              android:id="@+id/rl_time"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              />
        </LinearLayout>

      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        >
      <ImageView
          android:id="@+id/img_back"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="50dp"
          android:src="@mipmap/history_back"
          />
      <ImageView
          android:id="@+id/img_test"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:src="@mipmap/to_start_test"
          />

    </LinearLayout>
  </RelativeLayout>


</RelativeLayout>
