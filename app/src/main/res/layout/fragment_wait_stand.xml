<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:id="@+id/ly_tips"
      android:layout_centerInParent="true"
      android:background="@mipmap/bg_tips"
      android:orientation="horizontal"
      tools:context="com.fliggy.bodymachine.view.LoadWeightFragment"
      >
    <LinearLayout
        android:layout_width="0dp"
        android:gravity="right|center_vertical"
        android:paddingRight="90dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        >
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/icon_caiban"
    />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingLeft="90dp"
        android:gravity="left|center_vertical"
        android:layout_height="match_parent"
        >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/icon_shouban"
          />
    </LinearLayout>

  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="25dp"
      android:layout_below="@+id/ly_tips"
      android:layout_centerInParent="true"
      android:orientation="horizontal"
      tools:context="com.fliggy.bodymachine.view.LoadWeightFragment"
      >
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="30sp"
        android:gravity="right"
        android:paddingRight="50dp"
        android:text="请充分接触电极"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="0dp"
        android:paddingLeft="50dp"
        android:layout_weight="1"
        android:textSize="30sp"
        android:text="请握住手柄电极"
        android:layout_height="wrap_content"/>

  </LinearLayout>
  <include layout="@layout/include_lu_lr"/>
</RelativeLayout>

