<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <RelativeLayout
      android:id="@+id/rl_bg"
      android:layout_width="match_parent"
      android:layout_height="117dp"
      android:background="@mipmap/bg_height_c"
      android:layout_centerInParent="true"
      android:gravity="center_vertical"
      android:paddingLeft="15dp"
      >

  </RelativeLayout>
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/rl_center"
      android:layout_centerInParent="true"

      >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="203dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="vertical"
          android:paddingRight="10dp"
          >
        <TextView
            android:id="@+id/height_p_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="144sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:src="@drawable/shape_text_border_rect"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="vertical"
          android:paddingRight="10dp"
          >
        <TextView
            android:id="@+id/height_p_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textColor="@android:color/white"
            android:textSize="144sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:src="@drawable/shape_text_border_rect"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="vertical"
          android:paddingRight="10dp"
          >
        <TextView
            android:id="@+id/height_p_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="@android:color/white"

            android:textSize="144sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:src="@drawable/shape_text_border_rect"
            />
      </LinearLayout>
      <TextView
          android:id="@+id/txt_wei"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="cm"
          android:textColor="@android:color/white"
          android:textSize="72sp"
          />
    </LinearLayout>
  </RelativeLayout>

  <TextView
      android:id="@+id/txt_show_tips"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/rl_center"
      android:gravity="center"
      android:text="请输入身高"
      android:textColor="@android:color/white"
      android:textSize="36sp"
      />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/txt_show_tips"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="65dp"
      android:paddingRight="65dp"
      >
    <ImageView
        android:id="@+id/img_pre"
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_back"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
      <android.support.v7.widget.RecyclerView
          android:id="@+id/rl_keyboard"
          android:layout_width="582.7dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          >
      </android.support.v7.widget.RecyclerView>
      <ImageView
          android:id="@+id/img_del"
          android:layout_width="64dp"
          android:layout_height="64dp"
          android:src="@drawable/sl_delete"
          />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_next"
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:src="@drawable/ic_confirm"
        />
  </RelativeLayout>
</RelativeLayout>