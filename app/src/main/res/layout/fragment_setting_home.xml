<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingHomeFragment"
    >
  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"

        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="110dp"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingLeft="90dp"
          android:paddingRight="90dp"
          >
        <ImageView
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:src="@mipmap/icon_voice"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="音量"
            android:textColor="#ffffff"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/txt_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="50"
            android:textColor="#ffffff"
            android:textSize="44sp"
            />
        <com.xw.repo.BubbleSeekBar
            android:id="@+id/seek_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            app:bsb_max="15"
            app:bsb_min="0"
            app:bsb_progress="5"
            app:bsb_second_track_color="#ffffff"
            app:bsb_track_color="#ababab"
            app:bsb_track_size="4dp"
            />
      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#ffffff"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="110dp"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingLeft="90dp"
          android:paddingRight="90dp"
          >
        <ImageView
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:src="@mipmap/icon_linght"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="亮度"
            android:textColor="#ffffff"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/txt_bright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="50"
            android:textColor="#ffffff"
            android:textSize="44sp"
            />
        <com.xw.repo.BubbleSeekBar
            android:id="@+id/seek_bright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            app:bsb_max="255"
            app:bsb_min="0"
            app:bsb_progress="50"
            app:bsb_second_track_color="#ffffff"
            app:bsb_track_color="#ababab"
            app:bsb_track_size="4dp"
            />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#ffffff"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="110dp"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:visibility="gone"
          android:paddingLeft="90dp"
          android:paddingRight="90dp"
          >
        <ImageView
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:src="@mipmap/icon_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="姓名"
            android:textColor="#ffffff"
            android:textSize="24sp"
            />

      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#ffffff"
          />
      <LinearLayout
          android:id="@+id/ly_calender"
          android:layout_width="match_parent"
          android:layout_height="110dp"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingLeft="90dp"
          android:paddingRight="90dp"
          >
        <ImageView
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:src="@mipmap/icon_calender"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="日期设置"
            android:textColor="#ffffff"
            android:textSize="24sp"
            />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#ffffff"
          />
      <LinearLayout
          android:id="@+id/ly_weight"
          android:layout_width="match_parent"
          android:layout_height="110dp"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingLeft="90dp"
          android:paddingRight="90dp"
          >
        <ImageView
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:src="@mipmap/icon_kg"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="体重设置"
            android:textColor="#ffffff"
            android:textSize="24sp"
            />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#ffffff"
          />
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#ffffff"
          />
      <LinearLayout
          android:id="@+id/ly_print"
          android:layout_width="match_parent"
          android:layout_height="110dp"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingLeft="90dp"
          android:paddingRight="90dp"
          >
        <ImageView
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:src="@mipmap/icon_print"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="打印设置"
            android:textColor="#ffffff"
            android:textSize="24sp"
            />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#ffffff"
          />
      <LinearLayout
          android:id="@+id/ly_id"
          android:layout_width="match_parent"
          android:layout_height="110dp"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingLeft="90dp"
          android:paddingRight="90dp"
          >
        <ImageView
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:src="@mipmap/ic_setting_id"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="ID 设置"
            android:textColor="#ffffff"
            android:textSize="24sp"
            />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#ffffff"
          />
      <LinearLayout
          android:id="@+id/ly_print_paper"
          android:layout_width="match_parent"
          android:layout_height="110dp"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingLeft="90dp"
          android:paddingRight="90dp"
          >
        <ImageView
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:src="@mipmap/ic_print_paper_set"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="报告设置"
            android:textColor="#ffffff"
            android:textSize="24sp"
            />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#ffffff"
          />
      <LinearLayout
          android:id="@+id/ly_mark_weight"
          android:layout_width="match_parent"
          android:layout_height="110dp"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingLeft="95dp"
          android:paddingRight="90dp"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:visibility="gone"
            android:text="管理员中心"
            android:textColor="#ffffff"
            android:textSize="24sp"
            />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#ffffff"
          />
    </LinearLayout>
  </android.support.v4.widget.NestedScrollView>

</FrameLayout>