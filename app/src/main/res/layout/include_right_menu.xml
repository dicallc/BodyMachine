<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.8"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    tools:showIn="@layout/print_layout"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="20dp"
      android:orientation="horizontal"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="InBody评分"
        android:textSize="14sp"
        android:textStyle="bold"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:background="@android:color/black"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:gravity="center_horizontal"
      android:orientation="horizontal"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="61"
        android:textSize="24sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/100分"
        android:textSize="13sp"
        android:textStyle="bold"
        />
  </LinearLayout>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="20dp"
      android:text="总得分反应身体成分的评估值,\n肌肉发达的人可能超过100分"
      android:textSize="8sp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:padding="10dp"
      >
    <!--体重控制-->
    <include layout="@layout/include_weight_control"/>
    <!--肥胖评估-->
    <include layout="@layout/include_eval_fit"/>
    <include layout="@layout/include_study_pro"/>
    <include layout="@layout/include_run_power"/>

     <TextView
         android:layout_width="wrap_content"
         android:textSize="10sp"
         android:layout_marginTop="10dp"
         android:text="以实际体重为标准\n30分钟运动为准"
         android:layout_height="wrap_content"/>
     <TextView
         android:layout_width="wrap_content"
         android:textSize="12sp"
         android:text="结果解析QR代码"
         android:layout_marginTop="10dp"
         android:textStyle="bold"
         android:layout_height="wrap_content"/>
      <LinearLayout
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_height="80dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:text="扫描QR代码，查看\n结果解析的详细资料"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:layout_height="match_parent"
            />
      </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="20dp"
        >
      <TextView
          android:layout_width="wrap_content"
          android:textSize="12sp"
          android:textStyle="bold"
          android:text="生物电阻抗"
          android:layout_height="wrap_content"
          />
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginLeft="5dp"
          android:background="@android:color/black"
          />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>